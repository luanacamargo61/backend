<button class="btn btn-outline-info">+</button>

@{
    string nome = "Luana";
}
<h1>Olá, @nome</h1>
<p>Hoje é @DateTime.Now.ToString("dd/MM/yyyy").</p>

@{
    bool mostrarMensagem = true;
    if (mostrarMensagem == true)
    {
        <p>Esta é uma mensagem que entrou no if</p>
    }

    for (var i = 1; i <= 10; i++)
    {
        int res = i*8;
        <p>8 x @i = @res</p>
    }
}